{
  "private": true,
  "name": "@axonivy/ui-components-root",
  "engines": {
    "node": ">=20.10.0"
  },
  "volta": {
    "node": "22.11.0"
  },
  "scripts": {
    "ci": "npm install && npm run generate && npm run package && npm run type && (npm run lint:ci || true) && npm run test:ci",
    "generate": "npm run -w @axonivy/ui-icons generate",
    "build": "lerna run build",
    "build:storybook": "storybook build",
    "package": "lerna run package",
    "clean": "lerna run clean",
    "type": "lerna run type",
    "lint": "eslint",
    "lint:ci": "eslint -o eslint.xml -f checkstyle",
    "lint:fix": "eslint --fix",
    "lint:inspect": "eslint --inspect-config",
    "dev": "storybook dev -p 6006 --no-open",
    "test": "vitest test",
    "test:ci": "vitest test --watch=false --reporter=default --reporter=junit --outputFile=report.xml",
    "publish:next": "lerna publish --exact --canary --preid next --pre-dist-tag next --no-git-tag-version --no-push --ignore-scripts --yes"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.5.3",
    "@storybook/addon-interactions": "^8.5.3",
    "@storybook/addon-links": "^9.0.0",
    "@storybook/blocks": "^8.5.3",
    "@storybook/manager-api": "^8.5.3",
    "@storybook/react": "^9.0.0",
    "@storybook/react-vite": "^9.0.0",
    "@storybook/test": "^8.5.3",
    "@storybook/theming": "^8.5.3",
    "@types/node": "^22.10.7",
    "@vanilla-extract/vite-plugin": "^5.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint-plugin-storybook": "^9.0.0",
    "lerna": "^8.1.9",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^6.0.0",
    "storybook": "^9.0.0",
    "typescript": "^5.7.3",
    "typescript-cp": "^0.1.9",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^3.0.2"
  },
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/*",
      "dev-packages/*"
    ]
  }
}
