{
  "extends": "../../config/tsconfig.package.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "paths": {
      "test-utils": ["./src/test-utils/test-utils"],
      "@/components/*": ["./src/components/*"],
      "@/context/*": ["./src/context/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/utils/*": ["./src/utils/*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src"],
  "references": [{ "path": "../icons/tsconfig.json" }]
}
